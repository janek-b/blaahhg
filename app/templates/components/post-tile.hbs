<div class="card-container">
  {{#paper-card as |card|}}
    {{#card.title as |title|}}
      {{#title.text as |text|}}
        {{#text.headline}}{{#link-to 'post' post.id}}{{post.title}}{{/link-to}}{{/text.headline}}
        {{#text.subhead}}{{post.user.name}}{{/text.subhead}}
      {{/title.text}}
    {{/card.title}}
    {{card.image size="md" src=post.imgURL alt=post.title title="Tomster"}}
    {{#card.content class="layout-row layout-align-space-between"}}
      {{#card.media}}
        <div class="card-media">
          <p>
            {{post.body}}
          </p>
        </div>
      {{/card.media}}
    {{/card.content}}
    {{#card.actions class="layout-row"}}
      {{#paper-button iconButton=true}}{{paper-icon "favorite"}}{{/paper-button}}
      {{#paper-button iconButton=true}}{{paper-icon "settings"}}{{/paper-button}}
      {{#paper-button iconButton=true}}{{paper-icon "share"}}{{/paper-button}}
    {{/card.actions}}
  {{/paper-card}}
</div>
